<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".ui.merchant.InformationFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_alignStart="@+id/pdv_traffic_light"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdv_client"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_baseline_person_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdv_market"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_baseline_shopping_cart_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdv_stall_number"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_baseline_person_pin_circle_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdv_date"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_baseline_date_range_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pdv_last_visit"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_baseline_update_24" />
            </LinearLayout>
            <View
                android:layout_alignParentEnd="true"
                android:id="@+id/pdv_traffic_light"
                android:background="@drawable/back_rounded"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/init_image"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/image_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_camera_alt_24"
                            android:background="@drawable/back_primary"
                            android:padding="10dp"
                            app:tint="#FFFFFF"
                            android:contentDescription="@string/init_image" />
                        <ImageButton
                            android:id="@+id/image_before_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_image_search_24"
                            android:background="@drawable/back_primary"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            app:tint="#FFFFFF"
                            android:contentDescription="@string/init_image" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_image"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/image_after"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_camera_alt_24"
                            android:background="@drawable/back_primary"
                            android:padding="10dp"
                            app:tint="#FFFFFF"
                            android:contentDescription="@string/init_image" />
                        <ImageButton
                            android:id="@+id/image_after_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_image_search_24"
                            android:background="@drawable/back_primary"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            app:tint="#FFFFFF"
                            android:contentDescription="@string/init_image" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/view_image_before"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight=".5"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/view_image_after"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".5"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>