<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_client_name"
        android:textSize="18sp"
        android:textStyle="bold"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_images_merchant_visited"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_image"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/image_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        android:background="@drawable/back_primary"
                        android:padding="10dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="@string/init_image" />
                    <ImageButton
                        android:id="@+id/image_before_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_image_search_24"
                        android:background="@drawable/back_primary"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="@string/init_image" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_image"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/image_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        android:background="@drawable/back_primary"
                        android:padding="10dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="@string/init_image" />
                    <ImageButton
                        android:id="@+id/image_after_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_image_search_24"
                        android:background="@drawable/back_primary"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="@string/init_image" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/view_image_before"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                android:layout_weight=".5"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/view_image_after"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight=".5"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>