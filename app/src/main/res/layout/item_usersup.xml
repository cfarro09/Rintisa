<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_sup_background"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_sup_status"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_sup_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="VILLANUEVA ACOSTA VICENTA"
            app:drawableStartCompat="@drawable/ic_baseline_person_24" />
        <TextView
            android:id="@+id/user_sup_efectivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="Efectividad 50%"
            app:drawableStartCompat="@drawable/ic_baseline_check_circle_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_sup_hour_entry"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="Inicio - "
                app:drawableStartCompat="@drawable/ic_baseline_schedule_24" />
            <TextView
                android:id="@+id/user_sup_hour_finish"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="Fin -"
                app:drawableStartCompat="@drawable/ic_baseline_schedule_24" />
        </LinearLayout>
        <TextView
            android:id="@+id/user_sup_break"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="Break -"
            app:drawableStartCompat="@drawable/ic_baseline_schedule_24" />
    </LinearLayout>
</androidx.cardview.widget.CardView>