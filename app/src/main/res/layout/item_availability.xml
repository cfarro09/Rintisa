<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:id="@+id/product_availability_name"
        android:layout_toStartOf="@id/product_availability_flag"
        android:layout_height="wrap_content"
        android:labelFor="@+id/product_availability_flag"
        android:text="PALANA PALANA PALANA PALANA PALANA PALANA PALANA PALANA PALANA PALANA PALANA PALANA "/>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/product_availability_flag"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>