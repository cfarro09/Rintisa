<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Implementos de seguridad"
                android:textSize="20sp"
                android:padding="15px"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_epp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_bins"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:text="Subir imagen 1"
                        android:id="@+id/upload_image1"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/status_image1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:text="Subir imagen 2"
                        android:id="@+id/upload_image2"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/status_image2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/dialog_save"
                    android:background="@drawable/back_primary"
                    android:textColor="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/save"
                    />
                <Button
                    android:id="@+id/dialog_cancel"
                    android:background="@drawable/back_primary"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/cancel"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>